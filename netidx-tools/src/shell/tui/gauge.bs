type Gauge = {
  gauge_style: &[Style, null],
  label: &[Span, null],
  ratio: &f64,
  style: &[Style, null],
  use_unicode: &[bool, null]
};

let gauge = |
  #gauge_style: &[Style, null] = &null,
  #label: &[Span, null] = &null,
  #style: &[Style, null] = &null,
  #use_unicode: &[bool, null] = &null,
  ratio: &f64
| -> Tui `Gauge({ gauge_style, label, ratio, style, use_unicode })
